#include <bits/stdc++.h>
using namespace std;
vector<vector<int>> connections(10000, vector<int> (0,0));
vector<int> visited(10000,0);
set<int> nodes;
int n,m, ans = 0;

bool is_valid(int a) {
    return !(visited[a]);
}

void dfs(int start) {
    if (is_valid(start)) {
        visited[start] = 1;
        for (auto neighbor : connections[start]) {
            dfs(neighbor);
        }
    }
}
int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    cin >> n >> m;
    for (int i = 0; i < m; ++i) {
        int a, b;
        cin >> a >> b;
        connections[a].push_back(b);
        connections[b].push_back(a);
        nodes.insert(a);
        nodes.insert(b);
    }
    for (int i = 1; i<=n; ++i) {
        if (is_valid(i)) {
            dfs(i);
            ++ans;
        }
    }
    cout <<ans;
}