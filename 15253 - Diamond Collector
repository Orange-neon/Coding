#include<bits/stdc++.h>
using namespace std;
int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    //freopen("1.in", "r", stdin);
    int n, k;
    cin >> n >> k;
    vector<int> gems(n, 0);
    for (int& i : gems) {
        cin >> i;
    }
    sort(gems.begin(), gems.end());
    int i = 0;
    int j = 0;
    int MAXspace = 0;
    while (j != n) {
        if (gems[j] - gems[i] <= k) {
            MAXspace = max(MAXspace, j - i + 1);
            ++j;
        } else if (gems[j] - gems[i] > k) {
            ++i;
        }
    }
    cout << MAXspace;
}