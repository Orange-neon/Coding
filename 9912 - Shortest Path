#include <bits/stdc++.h>
using namespace std;
int n, m, sx, sy, ex, ey, ans;
bool madeit = false;
vector<vector<char>> maze;
vector<vector<int>> visited;
vector<vector<int>> dist;
int dx[4] = {0,0,-1,1};
int dy[4] = {1,-1,0,0};

bool is_valid(int x, int y) {
    return x>=0 && x<m && y>=0 && y<n && !visited[y][x] && !(maze[y][x]=='#');
}

void bfs() {
    queue<pair<int, int>> q;
    q.push({sx, sy});
    visited[sy][sx] = 1;
    while (!q.empty()) {
        auto head = q.front();
        q.pop();
        if (head.first == ex && head.second == ey) {
            madeit = true;
            ans = dist[head.second][head.first];
        }
        for (int i = 0; i < 4; ++i) {
            int nx = head.first + dx[i], ny = head.second + dy[i];
            if (is_valid(nx, ny)) {
                q.push({nx, ny});
                visited[ny][nx] = 1;
                dist[ny][nx] = dist[head.second][head.first] +1;
            }
        }
    }
}
int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    cin >> n >> m;
    for (int i = 0; i < n; ++i) {
        vector<char> row;
        for (int j = 0; j < m; ++j) {
            char pt;
            cin >> pt;
            if (pt == 'S') {
                sx = j;
                sy = i;
            } else if (pt == 'G') {
                ex = j;
                ey = i;
            }
            row.push_back(pt);
        }
        maze.push_back(row);
    }
    visited.resize(n, vector<int>(n, 0));
    dist.resize(n, vector<int>(n, 0));
    bfs();
    if (madeit) {
        cout <<ans;
    }
}