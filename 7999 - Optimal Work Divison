#include <bits/stdc++.h>
using namespace std;
int n, k, shortTime = INT_MAX;
vector<int> mechSums;
vector<int> tasks;
void bruteForce(int stage) {
    int currt = *max_element(mechSums.begin(), mechSums.end());
    /*
    cout << "\n At stage: " << stage << " shorT is: " << shortTime << '\n';
    cout << "\n At stage: " << stage << " mechsum is: ";
    for (int i : mechSums) {
        cout << i << ", ";
    }
    cout << '\n';
    */
    if (currt >= shortTime) {
        return;
    }
    if (stage == n) {
        shortTime = min(currt, shortTime);
        return;
    }
    for (int i = 0; i < k; ++i) {
        mechSums.at(i) += tasks.at(stage);
        bruteForce(stage + 1);
        mechSums.at(i) -= tasks.at(stage);
    }
}
int main() {
    ios::sync_with_stdio(0);
    cin.tie(0);
    cin >> n >> k;
    mechSums.resize(k, 0);
    for (int i = 0; i < n; ++i) {
        int q;
        cin >> q;
        tasks.push_back(q);
    }
    sort(tasks.rbegin(), tasks.rend());
    bruteForce(0);
    cout << shortTime;
}
